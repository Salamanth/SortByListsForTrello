{
  "manifest_version": 2,

  "name": "Trello Sort Cards by Steps",
  "description": "Organizes cards by custom steps in Trello",
  "version": "0.1",
  "icons": { "128": "icon.png" },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["js/jquery-1.11.3.min.js","js/sortable.min.js", "js/script.js", "js/options.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
