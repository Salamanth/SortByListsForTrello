{
  "manifest_version": 2,

  "name": "Trello Sort Cards by Steps",
  "description": "Organizes cards by steps",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["https://trello.com/*/cards"],
      "js": ["jquery-1.11.3.min.js", "script.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}